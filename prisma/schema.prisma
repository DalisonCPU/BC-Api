// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Account {
  email String @id @unique
  password String
  language String
  creationDate DateTime @default(now())
  lastLogin DateTime @default(now())
  players Player[]
}

model Player {
  id Int @id @default(autoincrement())
  fk_account String
  name String
  gender Int @default(0)
  creationDate DateTime @default(now())
  lastLogin DateTime @default(now())
  account Account @relation(fields: [fk_account], references: [email], onDelete: Cascade)
  playerData PlayerData[]
}

model PlayerVariable {
  id Int @id @default(autoincrement())
  name String
  type Int @default(0)
  playerData PlayerData[]
}

model PlayerData {
  playerId Int @map("player_id")
  variableId Int @map("variable_id")
  value String
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)
  variable PlayerVariable @relation(fields: [variableId], references: [id], onDelete: Cascade)

  @@id([playerId, variableId])
}