// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Account {
  email String @id @unique
  password String
  language String
  creationDate DateTime @default(now())
  lastLogin DateTime @default(now())
  players Player[]
    @@map("tbl_account")
}

model Player {
  id Int @id @default(autoincrement())
  account_id String
  name String @unique
  gender Int @default(0)
  creationDate DateTime @default(now())
  lastLogin DateTime @default(now())

  
  accountId  Account @relation(fields: [account_id], references: [email], onDelete: Cascade)
  playerData PlayerData[]
  @@map("tbl_player")
}

model PlayerVariable {
  id Int @id @default(autoincrement())
  name String @unique
  type Int @default(0)
  playerData PlayerData[]
  @@map("tbl_playervariable")
}

model PlayerData {
  playerId Int @map("player_id")
  variableId Int @map("variable_id")
  value String
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)
  variable PlayerVariable @relation(fields: [variableId], references: [id], onDelete: Cascade)
  @@id([playerId, variableId])
  @@map("tbl_playerdata")
}